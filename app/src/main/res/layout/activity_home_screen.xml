<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#19FFFFFF"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.chadwiedemann.habittracker.HomeScreenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_margin="0dp"
        android:layout_weight=".30"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="71dp"
            android:layout_height="70dp"
            android:layout_marginLeft="170dp"
            android:layout_weight="0"
            android:paddingTop="10dp"
            app:srcCompat="@drawable/habit_app_logo"
            android:contentDescription="TODO"
            android:layout_marginStart="170dp" />


        <ImageButton

            android:id="@+id/get_started_button"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginLeft="-85dp"
            android:layout_marginTop="90dp"
            android:layout_weight="0"
            android:background="#00000000"
            android:onClick="goToWebView"
            android:scaleType="fitCenter"
            android:src="@drawable/get_started_now"
            android:contentDescription="TODO"
            android:layout_marginStart="-85dp" />


        <ImageButton

            android:id="@+id/app_handbook_button"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_weight="0"
            android:background="#00000000"
            android:onClick="goToWebView"
            android:scaleType="fitCenter"
            android:src="@drawable/habit_app_handbook"
            android:visibility="invisible"
            android:contentDescription="TODO" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:layout_weight=".42"
        android:background="#F7F6F4F4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_habitchallenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="15dp"
            android:layout_weight="0"
            android:text="@string/txt_habitchallenge"
            android:textColor="#3F51B5"
            android:textSize="20sp"
            android:layout_marginStart="130dp" />

        <ImageButton

            android:id="@+id/triggers_checklist_button"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginLeft="-250dp"
            android:layout_marginTop="140dp"
            android:layout_weight="0"
            android:background="#00000000"
            android:onClick="goToManageYourTriggersActivity"
            android:scaleType="fitCenter"
            android:src="@drawable/manage_your_trigger_checklist"
            android:layout_marginStart="-250dp" />

        <ImageButton

            android:id="@+id/record_progress_button"
            android:layout_width="166dp"
            android:layout_height="154dp"
            android:layout_marginTop="40dp"
            android:layout_weight="2"
            android:background="#00000000"
            android:contentDescription="TODO"
            android:onClick="gotoRecordProgressActivity"
            android:scaleType="centerInside"
            android:src="@drawable/recordtodaysprogress" />


        <ImageButton

            android:id="@+id/craving_meter_button"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginTop="140dp"
            android:layout_marginRight="30dp"
            android:layout_weight="0"
            android:background="#00000000"
            android:contentDescription="TODO"
            android:onClick="goToCravingMeterActivity"
            android:scaleType="fitCenter"
            android:src="@drawable/cravingintensitymeter" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:layout_weight=".28"
        android:background="#28FFEB3B"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="@string/txt_Support"
            android:textColor="#3F51B5"
            android:textSize="20sp"
            android:layout_marginStart="170dp" />

        <ImageButton

            android:id="@+id/warning_signs_checklist_button"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="-280dp"
            android:layout_marginLeft="-280dp"
            android:layout_marginTop="70dp"
            android:layout_weight="2"
            android:background="#00000000"
            android:contentDescription="TODO"
            android:onClick="goToWebView"
            android:scaleType="fitCenter"
            android:src="@drawable/relapsewarningsigns" />


        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5" />


        <ImageButton

            android:id="@+id/spiritual_toolbox_button"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginTop="70dp"
            android:layout_weight="2"
            android:background="#00000000"
            android:contentDescription="TODO"
            android:onClick="goToWebView"
            android:scaleType="fitCenter"
            android:src="@drawable/buttonspiritualhelptoolbox" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5" />

        <ImageButton

            android:id="@+id/craving_toolbox_button"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginTop="70dp"
            android:layout_weight="2"
            android:background="#00000000"
            android:onClick="goToWebView"
            android:scaleType="fitCenter"
            android:src="@drawable/craving_assistance_toolbox" />


        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5" />

        <ImageButton

            android:id="@+id/five_steps_to_overcoming_craving_button"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginTop="70dp"
            android:layout_weight="2"
            android:background="#00000000"
            android:onClick="goToWebView"
            android:scaleType="fitCenter"
            android:src="@drawable/five_steps_to_overcome_craving"
            android:contentDescription="TODO" />


    </LinearLayout>

</android.widget.LinearLayout>
